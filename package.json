  "license": "MIT",
  "bin": {
    "healthcheckr": "./bin/healthcheckr"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint-fix": "tslint --project tsconfig.json --fix; yarn prettier --write",
    "lint": "tsc --project tsconfig.json --noEmit && tslint --project tsconfig.json && yarn prettier --list-different",
    "prettier": "prettier '**/*.ts'",
    "start": "ts-node src/index.ts --directory test --verbose",
    "test": "docker build -t choffmeister/healthcheckr:latest . && docker build -t choffmeister/healthcheckr:test test && docker run --name healthcheckr-test --rm -it -p 8080:8080 choffmeister/healthcheckr:test start --verbose"
  },
  "dependencies": {
    "@types/cron": "^1.7.1",
    "@types/express": "^4.16.1",
    "@types/js-yaml": "^3.12.1",
    "@types/lodash": "^4.14.133",
    "@types/puppeteer": "^1.12.4",
    "@types/yargs": "^13.0.0",
    "axios": "^0.19.0",
    "cron": "^1.7.1",
    "express": "^4.17.1",
    "express-basic-auth": "^1.2.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.11",
    "prom-client": "^11.3.0",
    "puppeteer": "^1.17.0",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1",
    "winston": "^3.2.1",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "prettier": "^1.17.1",
